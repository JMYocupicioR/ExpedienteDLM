{
  "name": "expediente-dlm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "// === QUALITY ASSURANCE ===": "",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "// === SUPABASE TYPES ===": "",
    "gen:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/lib/database.types.ts",
    "gen:types:local": "supabase gen types typescript --local > src/lib/database.types.ts",
    "// === MIGRATION SCRIPTS ===": "",
    "migrate:features": "powershell -ExecutionPolicy Bypass -File migrate-to-features.ps1",
    "fix-imports": "node fix-imports.mjs",
    "// === DEVELOPMENT WORKFLOW ===": "",
    "dev:clean": "rm -rf dist && npm run dev",
    "dev:debug": "npm run dev -- --debug",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "// === QUALITY CHECKS ===": "",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "check:fix": "npm run typecheck && npm run lint:fix && npm run format",
    "// === PRE-COMMIT HOOKS ===": "",
    "pre-commit": "npm run check",
    "pre-push": "npm run build"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.85.3",
    "@types/lodash.throttle": "^4.1.9",
    "@types/qrcode": "^1.5.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-speech-recognition": "^3.9.6",
    "@types/sortablejs": "^1.15.8",
    "date-fns": "^3.6.0",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.344.0",
    "openai": "^5.12.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.4",
    "react-router-dom": "^6.22.3",
    "react-speech-recognition": "^4.0.1",
    "recharts": "^2.12.2",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@hcaptcha/types": "^1.0.4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.23",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "glob": "^10.3.10",
    "globals": "^15.9.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "supabase": "^2.34.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
